<div class="container">

  <!-- Marketing Icons Section -->
  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4>Pages <%= link_to show_icon_with_text("fa-plus","Add Page"), new_page_path, :class => "btn btn-default rightFloat" %></h4>
        </div>
        <div class="panel-body">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>Title</th>
                <th>Status</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @pages.each do |page|  %>
              <tr>
                <td><%= link_to page.title, page_path(page) %></td>
                <td><%= page.enabled ? "Enabled" : "Disbaled" %></td>
                <td><%= link_to "Edit", edit_page_path(page) %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <!-- /.row -->
</div>