<!-- Page Content -->
<div class="container">

  <!-- Marketing Icons Section -->
  <div class="row">
    <div class="col-lg-12">
      <div class='list-group gallery'>
        <% @albums.each do |album| %>
          <% photo = album.photos.sample %>
          <div class='col-sm-4 col-xs-6 col-md-3 col-lg-3'>
            <a class="thumbnail" href="<%= album_path(album) %>">
              <img class="img-responsive" alt="" src="<%= photo.image %>" />
              <div class='text-center'>
                <medium class='text-muted'><%= album.title.humanize %></medium>
              </div> <!-- text-right / end -->
            </a>
          </div> <!-- col-6 / end -->
        <% end %>
      </div> <!-- list-group / end -->
    </div>
  </div>
  <!-- /.row -->
</div>




