<!-- Page Content -->
<div class="container">

  <!-- Marketing Icons Section -->
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header"><%= @album.title.humanize unless @album.title.blank? %></h1>
      <% unless @album.description.blank? %>
        <ol class="breadcrumb">
          <li class="active"><%= @album.description %></li>
        </ol>
      <% end %>
      <div class='list-group gallery'>
        <% @photos.each do |photo| %>
          <div class='col-sm-4 col-xs-6 col-md-3 col-lg-3'>
            <a class="thumbnail fancybox" rel="ligthbox" href="<%= photo.image %>">
              <img class="img-responsive" alt="" src="<%= photo.image %>" />
              <!--<div class='text-right'>
                <small class='text-muted'>Image Title</small>
              </div> <!-- text-right / end -->
            </a>
          </div> <!-- col-6 / end -->
        <% end %>
      </div> <!-- list-group / end -->
    </div>
  </div>
  <!-- /.row -->
</div>




