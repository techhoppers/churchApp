<div class="container">

  <!-- Marketing Icons Section -->
  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4>Albums <%= link_to show_icon_with_text("fa-plus","Add Album"), new_album_path, :class => "btn btn-default rightFloat" %></h4>
        </div>
        <div class="panel-body">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @albums.each do |album|  %>
              <tr>
                <td><%= link_to album.title.camelize, album_path(album)%></td>
                <td><%= album.description %></td>
                <td>
                    <%= link_to show_icon("fa-remove"), album_path(album),
                      :data => {:confirm => "Are you sure?", :method => :delete}, :title => "Delete Page"  %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <!-- /.row -->
</div>